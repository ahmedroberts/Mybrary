<h2 class="page-header"><%= book.title %></h2>
<img width="200" height="300" src="<%= book.coverImagePath %>">
<div>
  <strong>Author: <%= book.author.name %></strong>
</div>
<div>
  Publish Date: <%= book.publishDate.toDateString() %>
</div>
<div>
  Page Count: <%= book.pageCount %>
</div>
<div>
  Publish Date: <%= book.description %>
</div>

<!-- links -->
<a href="/books/<%= book.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', {url: `/books/${book.id}` }) %>
<a href="/authors/<%= book.author.id %>">View Author</a>